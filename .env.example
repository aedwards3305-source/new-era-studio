# Shopify Storefront API (required for production)
NEXT_PUBLIC_SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
NEXT_PUBLIC_SHOPIFY_STOREFRONT_ACCESS_TOKEN=your-storefront-access-token

# Set to 'true' to use live Shopify data instead of mock data
NEXT_PUBLIC_USE_SHOPIFY=false

# GlossGenius Booking URL
NEXT_PUBLIC_GLOSSGENIUS_BOOKING_URL=https://newerastudios.glossgenius.com/booking-flow

# Site URL (for SEO)
NEXT_PUBLIC_SITE_URL=https://newerastudio.com

# Admin Panel
ADMIN_PASSWORD=your-secure-password-here
BLOB_READ_WRITE_TOKEN=your-vercel-blob-token
